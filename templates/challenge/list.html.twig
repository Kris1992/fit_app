{% extends 'content_base.html.twig' %}

{% block title %}Challenges{% endblock %}

{% block content_class %}{{ parent() }} border-info p-2{% endblock %} 
{% block content_body %}
    <div class="col-sm-12">
        <div class="col-sm-4 mx-auto mb-2">
            {{ knp_pagination_filter(pagination, {}) }}
        </div>
        <div class="list my-3">
            {% for challenge in pagination %}
                <div class="row mb-2 border-bottom border-primary challenge-card position-relative">
                    <a href="{{ path('challenge_show', {id: challenge.id}) }}" class="stretched-link"></a>
                    <div class="col-sm-1 align-self-center">
                        <img class="d-inline-block mr-1 align-bottom" src="{{ asset('img/challenges/challenge.jpg') }}" width="30" height="30" alt="Challenge Image">
                    </div>
                    <div class="col-sm-9 text-left align-self-center">

                        <div class="col-sm-12">
                            <span>{{ challenge.title }}</span>
                        </div>
                        <div class="col-sm-12">
                            <span>
                                <small class="text-muted">
                                    {{ challenge.goalPropertyDescription }}
                                </small>
                            </span>
                        </div>
                        <div class="col-sm-12">
                            <span>
                                <small class="text-muted">
                                    {{ challenge.startAt | date('m/d/Y') }} 
                                    - 
                                    {{ challenge.stopAt | date('m/d/Y')}}
                                </small>
                            </span>
                        </div>
                    </div>

                    <div class="col-sm-2 align-self-center">
                        <span class="text-uppercase">
                            <small class="text-muted">
                                Participants
                                <strong>
                                    {{ challenge.participants | length }}
                                </strong>
                            </small>
                        </span>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(pagination, null, {}, {
                'align': 'center'
            }) }}
            {% include 'per_page.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}


{% endblock %}
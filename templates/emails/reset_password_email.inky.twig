{% extends 'emails/base_email.inky.twig' %}

{% block content %}
        <row>
            <columns>
                <spacer size="16"></spacer>
                <h3>
                    <center>
                        Hi {{ user.firstName }}!!
                    </center>
                </h3>
            </columns>
        </row>
        <row>
            <columns>
                <p>
                    Someone has requested a link to change your password. You can do this through the button below.
                </p>
            </columns>
        </row>
        <row>
            <columns>
                <center>
                    <button class="button large rounded" href="{{ url('app_renew_password', {'token': user.passwordToken.token }) }}">
                        Change password
                    </button>
                </center>
            </columns>
        </row>
        <row>
            <columns>
                <p>
                    If you did not initiate this request, you may safely ignore this message. The request will expire shortly.
                </p>
            </columns>
        </row>
{% endblock %}

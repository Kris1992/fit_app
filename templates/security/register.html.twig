{% extends 'base.html.twig' %}

{% form_theme registrationForm _self %}
{% block _user_registration_form_agreeTerms_row %}
    <div class="checkbox my-3">
        {{ form_errors(form) }}
        <label>
            <input type="checkbox" name="{{ full_name }}" required> Agree to terms
        </label>
    </div>
{% endblock %}

{% block title %}Register Page{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/_login.css') }}">
{% endblock %}
{% block content %}

<section class="register">
		
	<div class="container">
		
		<div class="row">
	      	<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
		        <div class="card card-signin my-5 shadow-box">
		          	<div class="card-body">
		         
		            	<h4 class="card-title text-center text-green text-uppercase">Create new account</h4>
		              		{{ form_start(registrationForm, {
                				'attr': {'class': 'form-signin'}
            				}) }}
			                	{{ form_row(registrationForm.email, {
			                		'label' : 'Your e-mail: ',
			                		attr: { placeholder: 'Email' }
                				}) }}
                				{{ form_row(registrationForm.firstName, {
                					'label' : 'First Name: ',
                    				attr: { placeholder: 'First Name' }
                				}) }}
                				{{ form_row(registrationForm.secondName, {
                					'label' : 'Second Name: ',
                    				attr: { placeholder: 'Second Name' }
                				}) }}
                				{{ form_row(registrationForm.plainPassword.first, {
                					'label' : 'Password: ',
                    				attr: { placeholder: 'Password' }
                				}) }}
                				{{ form_row(registrationForm.plainPassword.second, {
                					'label' : 'Repeat password: ',
                    				attr: { placeholder: 'Repeat password' }
                				}) }}
                				{{ form_row(registrationForm.agreeTerms) }}
                			
                				<button class="btn btn-lg btn-green btn-block text-uppercase" type="submit">Register</button>
                			
            				{{ form_end(registrationForm) }}



		              		
		              	
		            	</form>
		          	</div>
		          	<div class="card-footer text-center">
	      				<a href="#">Forgot Password?</a>
	    			</div>
		        </div>
	      	</div>
	    </div>
    </div>
</section>
{% endblock %}
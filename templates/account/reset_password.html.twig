{% extends 'base.html.twig' %}
{% block title %}Reset Password{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/_login.css') }}">
{% endblock %}
{% block content %}

<section class="resetPassword">		
	<div class="container">
		<div class="row">
			<div class="col-sm-12 {{ app.session.flashbag.peek('warning')|length > 0 ? 'mt-3' : '' }}">
				{% include 'flash_messages.html.twig' %} 
            </div>
	      	<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
		        <div class="card card-signin my-5 shadow-box">
		          	<div class="card-body">
		            	<h4 class="card-title text-center text-green text-uppercase">Reset Password</h4>
		            	<form class="form-signin" method="POST">
		              		<div class="form-label-group">
		              			<label for="inputEmail">E-mail: </label>
		                		<input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
		                	</div>

		              		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

		              		<button class="btn btn-lg btn-green btn-block text-uppercase mt-4" type="submit">Generate</button>
		              	
		            	</form>
		          	</div>
		        </div>
	      	</div>
	    </div>
    </div>
</section>
{% endblock %}